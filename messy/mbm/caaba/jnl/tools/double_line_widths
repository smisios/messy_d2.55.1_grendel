#!/bin/tcsh
# double widths of lines in a *.plt metafile

sed -e 's/ 51    29     1     1    1.00000     1/ 51    29     1     1    2.00000     1/' \
    -e 's/ 51    29     2     1    1.00000     2/ 51    29     2     1    2.00000     2/' \
    -e 's/ 51    29     3     1    1.00000     3/ 51    29     3     1    2.00000     3/' \
    -e 's/ 51    29     4     1    1.00000     4/ 51    29     4     1    2.00000     4/' \
    -e 's/ 51    29     5     1    1.00000     5/ 51    29     5     1    2.00000     5/' \
    -e 's/ 51    29     6     1    1.00000     6/ 51    29     6     1    2.00000     6/' \
    -e 's/ 51    29     7     1    2.00000     1/ 51    29     7     1    4.00000     1/' \
    -e 's/ 51    29     8     1    2.00000     2/ 51    29     8     1    4.00000     2/' \
    -e 's/ 51    29     9     1    2.00000     3/ 51    29     9     1    4.00000     3/' \
    -e 's/ 51    29    10     1    2.00000     4/ 51    29    10     1    4.00000     4/' \
    -e 's/ 51    29    11     1    2.00000     5/ 51    29    11     1    4.00000     5/' \
    -e 's/ 51    29    12     1    2.00000     6/ 51    29    12     1    4.00000     6/' \
    -e 's/ 51    29    13     1    3.00000     1/ 51    29    13     1    6.00000     1/' \
    -e 's/ 51    29    14     1    3.00000     2/ 51    29    14     1    6.00000     2/' \
    -e 's/ 51    29    15     1    3.00000     3/ 51    29    15     1    6.00000     3/' \
    -e 's/ 51    29    16     1    3.00000     4/ 51    29    16     1    6.00000     4/' \
    -e 's/ 51    29    17     1    3.00000     5/ 51    29    17     1    6.00000     5/' \
    -e 's/ 51    29    18     1    3.00000     6/ 51    29    18     1    6.00000     6/' \
    $1 >&! $1.tmp

mv -f $1.tmp $1

